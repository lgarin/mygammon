<configuration xmlns="urn:activemq"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="urn:activemq /schema/artemis-server.xsd">

	<core xmlns="urn:activemq:core">

		<persistence-enabled>false</persistence-enabled>
		<journal-type>NIO</journal-type>
		<!-- <paging-directory>pagingdir</paging-directory> <bindings-directory>somedir</bindings-directory> 
			<create-bindings-dir>false</create-bindings-dir> <page-max-concurrent-io>17</page-max-concurrent-io> 
			<journal-directory>somedir2</journal-directory> <create-journal-dir>false</create-journal-dir> -->
		<connectors>
			<connector name="in-vm">vm://0</connector>
		</connectors>

		<acceptors>
			<acceptor name="in-vm">vm://0</acceptor>
		</acceptors>

		<security-enabled>false</security-enabled>

		<queues>
			<queue name="queue1">
				<address>queue1</address>
				<durable>false</durable>
			</queue>
			<queue name="queue2">
				<address>queue2</address>
				<durable>false</durable>
			</queue>
		</queues>

		<address-settings>
			<!--default for catch all -->
			<address-setting match="#">
				<dead-letter-address>DLQ</dead-letter-address>
				<expiry-address>ExpiryQueue</expiry-address>
				<redelivery-delay>0</redelivery-delay>
				<max-size-bytes>10Mb</max-size-bytes>
				<message-counter-history-day-limit>10
				</message-counter-history-day-limit>
				<address-full-policy>BLOCK</address-full-policy>
			</address-setting>
		</address-settings>

	</core>
</configuration>